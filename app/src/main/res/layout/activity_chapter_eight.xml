<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Chapters.ChapterEightActivity">

    <Button
            android:text="Write"
            android:layout_width="299dp"
            android:layout_height="48dp"
            android:id="@+id/button"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/content_edit_text"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Read"
            android:layout_width="302dp"
            android:layout_height="46dp"
            android:id="@+id/button_read"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button"/>
    <EditText
            android:layout_width="337dp"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/title_edit_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Title"/>
    <EditText
            android:layout_width="337dp"
            android:layout_height="164dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/content_edit_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title_edit_text" android:gravity="top" android:hint="Content"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content_text_view" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.106" android:textSize="18sp"
            android:textColor="@color/colorAccent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_read"/>
</android.support.constraint.ConstraintLayout>