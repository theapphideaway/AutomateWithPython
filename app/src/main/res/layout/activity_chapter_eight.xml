<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Chapters.ChapterEightActivity">

    <TextView
            android:text="Chapter 8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/chapter_heading4" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorAccent" android:textSize="30sp"
            android:gravity="center"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/title_edit_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Title"
            app:layout_constraintHorizontal_bias="0.516" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/chapter_heading4"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/body_edit_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title_edit_text" android:gravity="top" android:hint="Content"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content_text_view"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/san_francisco"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="8dp"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginEnd="8dp">

        <Button
                android:text="Read"
                android:fontFamily="@font/san_francisco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_read" android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/button" android:layout_marginEnd="16dp" android:layout_marginTop="0dp"
                android:backgroundTint="#306998" android:textColor="@color/cardview_light_background"
                android:background="@drawable/buttonshape"/>
        <Button
                android:text="Write"
                android:fontFamily="@font/san_francisco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/button"
                android:layout_gravity="right" android:backgroundTint="#306998"
                android:textColorLink="@color/colorPrimaryDark"
                android:textColor="@color/cardview_light_background" android:background="@drawable/buttonshape"/>
    </RelativeLayout>
</LinearLayout>
</ScrollView>