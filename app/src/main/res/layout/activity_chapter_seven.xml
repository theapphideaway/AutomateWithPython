<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Chapters.ChapterSevenActivity">

    <TextView
            android:text="Chapter 7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/chapter_heading3" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorAccent" android:textSize="30sp"
            android:gravity="center"/>
    <Button
            android:text="Search text for phone numbers"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/search_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/san_francisco"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.944" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/base_text_view" android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/cardview_light_background" android:background="@drawable/buttonshape"/>

    <TextView
            android:layout_width="match_parent"
            android:text="Text"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/search_results_text_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textColor="@color/colorAccent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/search_button"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="304dp"
            android:inputType="textMultiLine"
            android:fontFamily="@font/san_francisco"
            android:ems="10"
            android:gravity="top|left"
            android:id="@+id/base_text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Enter text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/chapter_heading3"/>
</android.support.constraint.ConstraintLayout>