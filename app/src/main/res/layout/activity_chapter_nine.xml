<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Chapters.ChapterNineActivity">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="@font/san_francisco"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/old_file_edit_text"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:hint="File From Chapter Eight" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/chapter_heading5"/>
    <TextView
            android:text="Chapter 9"
            android:fontFamily="@font/san_francisco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chapter_heading5" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorAccent" android:textSize="30sp"
            android:gravity="center"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/new_name_edit_text"
            android:hint="New Name For File" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/old_file_edit_text"/>
    <Button
            android:text="Rename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/rename_button"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/cardview_light_background" android:background="@drawable/buttonshape"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/new_name_edit_text"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/delete_button"/>
    <Button
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/delete_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/cardview_light_background" android:background="@drawable/buttonshape"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/new_name_edit_text"/>
</android.support.constraint.ConstraintLayout>