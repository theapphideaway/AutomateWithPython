<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Chapters.ChapterFourActivity">

    <TextView
            android:text="Chapter 4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorAccent" android:textSize="30sp"
            android:gravity="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/list_text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@color/colorAccent" android:textSize="18sp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView11"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/delete_by_index_edit_text"
            android:hint="Enter an index"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/list_text_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/index_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/list_text_view" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/delete_by_index_edit_text"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_at_index_text_view" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/delete_by_index_edit_text"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textColor="@color/colorAccent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_list_text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="8dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/item_at_index_text_view"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/verify_edit_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/new_list_text_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:hint="Enter item in list"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/verify_button" app:layout_constraintStart_toEndOf="@+id/verify_edit_text"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/new_list_text_view" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/verify_text_view" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/verify_edit_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/colorAccent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/added_item_list_text_view" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/verify_text_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/colorAccent"/>
</android.support.constraint.ConstraintLayout>