<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Chapters.ChapterOneActivity">


    <TextView
            android:text="Chapter 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorAccent" android:textSize="30sp"
            android:gravity="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/py_int_text" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textColor="@color/colorAccent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/py_float_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/py_int_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/colorAccent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/py_string_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/py_float_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/colorAccent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/py_string_concat_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/py_string_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/colorAccent"/>
    <TextView
            android:text="Your First Program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/program_static_text" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/py_string_concat_text"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="24sp"
            android:textColor="@color/colorAccent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/py_program_greeting_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/program_static_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/colorAccent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/py_program_name_question_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/py_program_greeting_text"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textColor="@color/colorAccent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Name"
            android:id="@+id/py_program_name_edit_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/py_program_name_question_text"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/py_name_button" app:layout_constraintStart_toEndOf="@+id/py_program_name_edit_text"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="212dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.543"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/py_personal_greeting_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/colorAccent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/py_program_name_edit_text"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/py_name_length_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/colorAccent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/py_personal_greeting_text"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/py_program_age_question_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/py_name_length_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/colorAccent"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Age"
            android:ems="10"
            android:id="@+id/py_program_age_edit_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/py_program_age_question_text"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/py_age_button" app:layout_constraintStart_toEndOf="@+id/py_program_age_edit_text"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="84dp" app:layout_constraintTop_toBottomOf="@+id/py_name_button"
            app:layout_constraintHorizontal_bias="0.543"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/py_age_calc_text"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textColor="@color/colorAccent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/py_program_age_edit_text"/>
</android.support.constraint.ConstraintLayout>