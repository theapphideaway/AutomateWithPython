<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Chapters.ChapterThirteenActivity">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/word_title_edit_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Enter the name of the word document"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/save_button"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/word_add_edit_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Text to add (optional)"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/word_title_edit_text"/>
    <Button
            android:text="Number of pages"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/save_button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/title_edit_text"
            android:backgroundTint="@color/colorPrimary" android:textColor="@color/cardview_light_background"
            android:background="@drawable/buttonshape"/>
    <Button
            android:text="Save and Read"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/save_word_button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:backgroundTint="@color/colorPrimary" android:textColor="@color/cardview_light_background"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/word_add_edit_text"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/title_edit_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Enter the name of the PDF"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/chapter_heading9"/>
    <TextView
            android:text="Chapter 13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/chapter_heading9" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorAccent" android:textSize="30sp"
            android:gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/word_file_text_view"
            app:layout_constraintTop_toBottomOf="@+id/save_word_button" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textColor="@color/colorAccent" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>