<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Chapters.ChapterSixteenActivity">

    <TextView
            android:text="Chapter 16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chapter_heading12" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorAccent" android:textSize="30sp"
            android:gravity="center"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username_edit_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Enter Gmail" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/chapter_heading12"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_edit_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Enter Password" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/username_edit_text"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/subject_edit_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Subject" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/recipient_edit_text"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/recipient_edit_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Recipient" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/password_edit_text"/>
    <EditText
            android:layout_width="362dp"
            android:layout_height="140dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/body_edit_text" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="Body" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/subject_edit_text"
            android:gravity="top"/>
    <Button
            android:text="send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/body_edit_text" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>