<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Chapters.ChapterThreeActivity">

    <TextView
            android:text="Chapter 3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/textView10" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorAccent" android:textSize="30sp"
            android:gravity="center"/>
    <TextView
            android:text="Since this entire app is based around using functions in python, this page will focus on exception handling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/explaination_text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="parent"
            android:textColor="@color/colorAccent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"/>
    <TextView
            android:text="Exception Handling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/exception_handling_text_view" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/explaination_text_view"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textColor="@color/colorAccent" android:textSize="18sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/exception_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:textColor="@color/colorAccent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/exception_edit_text" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/exception_edit_text"
            android:hint="Enter a number" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/exception_handling_text_view" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/exception_button" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/san_francisco"
            android:id="@+id/exception_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="128dp" app:layout_constraintTop_toBottomOf="@+id/textView10"
            android:backgroundTint="@color/colorPrimary" android:textColor="@color/cardview_light_background"
            android:background="@drawable/buttonshape"/>
</android.support.constraint.ConstraintLayout>